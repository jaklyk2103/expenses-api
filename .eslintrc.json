{
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": ["dist", "deployment", "**.test.ts"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [{
        "files": [ "src/**/*.ts" ]
    }],
    "parser": "@typescript-eslint/parser",
    "parserOptions": { 
        "project": ["./tsconfig.json"] 
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": "off",
        "@typescript-eslint/semi": ["error", "always"]
    }
}
